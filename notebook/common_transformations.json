				"source": [
					"def with_naturalkey(df, nk_col_name, cols):\r\n",
					"    return(\r\n",
					"        df\r\n",
					"        .select(\r\n",
					"            F.concat_ws(\"|\", *[F.col(c) for c in cols]).alias(nk_col_name),\r\n",
					"            \"*\",\r\n",
					"        )\r\n",
					"    )"
				],
				"execution_count": null
			},
			{
