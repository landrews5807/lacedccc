				"source": [
					"def with_type2_columns(df):\r\n",
					"    return (\r\n",
					"        df\r\n",
					"        .select(\r\n",
					"            \"*\",\r\n",
					"            F.current_timestamp().alias(\"effective_date\"),\r\n",
					"            F.lit('2099-12-31 11:59:59').alias(\"end_date\"),\r\n",
					"            F.lit(True).alias(\"IsActive\")\r\n",
					"        )\r\n",
					"    )"
				],
				"execution_count": null
			},
